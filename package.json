{
	"name": "gaem-visualizations",
	"version": "0.0.0",
	"description": "A set of web-based svg visualizations build with javascript.",
	"main": "./dist/app.js",
	"types": "./dist/app.d.ts",
	"scripts": {
		"start-prod": "npm-run-all --serial lint build copy server",
		"lint": "tslint -p ./tsconfig.json -c ./tslint.json",
		"build": "tsc -p ./tsconfig.json",
		"copy": "copy-and-watch ./src/public/images/** ./dist/images/",
		"server": "node ./dist/app.js",
		"start-dev": "npm-run-all --parallel --print-label watch-build watch-copy watch-server",
		"watch-build": "tsc -w -p ./tsconfig.json ",
		"watch-copy": "copy-and-watch --watch ./src/public/images/** ./dist/images/",
		"watch-server": "nodemon ./dist/app.js --watch ./dist/",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/ArchitectureMining/GAEM-Visualizations.git"
	},
	"author": "Thomas Ipskamp",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ArchitectureMining/GAEM-Visualizations/issues"
	},
	"homepage": "https://github.com/ArchitectureMining/GAEM-Visualizations#readme",
	"devDependencies": {
		"@types/express": "^4.0.37",
		"@types/node": "^8.0.28",
		"copy-and-watch": "^0.1.2",
		"nodemon": "^1.12.1",
		"npm-run-all": "^4.1.1",
		"tslint": "^5.7.0",
		"typescript": "^2.5.2"
	},
	"dependencies": {
		"express": "^4.15.4"
	}
}
